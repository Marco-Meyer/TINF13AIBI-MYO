<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.myo.myoscriptcontrol" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GestureListActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_gesture_list" >
        </activity>
        <activity
            android:name=".activities.GestureEditActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_gesture_edit" >
        </activity>
        <activity
            android:name=".activities.ScriptListActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_script_list" >
        </activity>
        <activity
            android:name=".activities.ScriptEditActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_script_edit" >
        </activity>
        <activity
            android:name=".activities.FileExplorerActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_file_explorer" >
        </activity>
        <activity
            android:name=".activities.GestureRecordActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_gesture_record" >
        </activity>
        <activity
            android:name=".activities.ErrorActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_error" >
        </activity>
    </application>

</manifest>
