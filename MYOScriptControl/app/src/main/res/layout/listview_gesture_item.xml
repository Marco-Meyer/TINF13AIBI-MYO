<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp">

    <!-- Thumbnail Image -->
    <!--ImageView
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" /-->

    <!-- GestureName -->
    <TextView
        android:ellipsize="end"
        android:gravity="top|start"
        android:lines="1"
        android:maxLines="1"
        android:id="@+id/gestureName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/fileName"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textStyle="bold" />

    <!-- Script -->
    <TextView
        android:ellipsize="end"
        android:gravity="top|start"
        android:lines="2"
        android:maxLines="2"
        android:id="@+id/textViewListScript"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gestureName"
        android:layout_marginTop="1dip"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="@dimen/textViewListScript" />

    <!-- Date -->
    <TextView
        android:id="@+id/textViewListItemDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/textViewListItemDate"
        android:textSize="@dimen/textViewListItemDate" />

</RelativeLayout>